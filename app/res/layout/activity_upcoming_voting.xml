<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="6dip" >

    <TextView
        android:id="@+id/activityUpcomingVotingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/activityUpcomingVotingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description" />

    <ListView
        android:id="@+id/activityUpcomingListViewOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
    <TextView
        android:id="@+id/activityUpcomingVotingCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creator"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/activityUpcomingVotingStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Started"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/activityUpcomingVotingEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ended"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
